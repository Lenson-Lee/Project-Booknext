// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  uid       String   @unique
  memo      BookMemo[]
}

model BookMemo {
  id        Int      @id @default(autoincrement())
  title     String  
  userId    String
  auth      String  
  isbn      String      
  isbn13    String?      
  content   String?
  createdAt DateTime @default(now())
  state     String
  score     Int
  start     Int?
  end       Int?
  keywords  String?
  field     String?
  
  author    User  @relation(fields: [userId], references: [uid])
  role      Role     @default(USER)
}


model WishList {
    id        Int      @id @default(autoincrement())
    uid       String
    title     String  
    author    String  
    isbn      String      
    isbn13    String? 
    role      Role     @default(USER)
    
}

enum Role {
  USER
  ADMIN
}