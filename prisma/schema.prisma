// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  uid       String   @unique
  memo      BookMemo[]
}

model BookMemo {
  id        Int      @id @default(autoincrement())
  title     String  
  userId    String
  auth      String  
  isbn      String      
  isbn13    String?      
  content   String?
  createdAt DateTime @default(now())
  state     String
  score     Int
  start     String?
  end       String?
  keywords  String?
  field     String?
  cover     String?
  author    User  @relation(fields: [userId], references: [uid])

  role      Role     @default(USER)
}

model MemoList {
  id        Int      @id @default(autoincrement())
  userId    String
  isbn      String      
  isbn13    String?      
  content   String?
  createdAt DateTime @default(now())
  keywords  String?
  role      Role     @default(USER)
}

enum Role {
  USER
  ADMIN
}