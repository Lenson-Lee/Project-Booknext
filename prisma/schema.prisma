// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model BookMemo {
  id        Int      @id @default(autoincrement())
  uid       String
  title     String  
  author    String  
  isbn      Int      
  isbn13    Int?      
  createdAt DateTime @default(now())
  state     String
  score     Int
  start     Int?
  end       Int?
  keywords  String?
  field     String?
  role      Role     @default(USER)
}


enum Role {
  USER
  ADMIN
}